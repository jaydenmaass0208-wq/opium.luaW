local statsLabel = Instance.new("TextLabel", info)
statsLabel.Size = UDim2.new(1,-12,0,26)
statsLabel.Position = UDim2.new(0,6,0,6)
statsLabel.BackgroundTransparency = 1
statsLabel.Font = Enum.Font.GothamMedium
statsLabel.TextSize = 13
statsLabel.TextColor3 = Color3.fromRGB(230,230,255)
statsLabel.Text = "FPS: -- | Ping: --"

local discord = Instance.new("TextButton", info)
discord.Size = UDim2.new(1,-12,0,30)
discord.Position = UDim2.new(0,6,0,40)
discord.Text = "discord.gg/FYYTdGB7bF"
discord.Font = Enum.Font.GothamMedium
discord.TextSize = 12
discord.TextColor3 = Color3.fromRGB(180,120,255)
discord.BackgroundColor3 = Color3.fromRGB(25,25,40)
discord.BorderSizePixel = 0
Instance.new("UICorner", discord).CornerRadius = UDim.new(0,8)

discord.MouseButton1Click:Connect(function()
	if setclipboard then
		setclipboard("https://discord.gg/FYYTdGB7bF")
		discord.Text = "Copied âœ”"
		task.delay(1.2,function()
			discord.Text = "discord.gg/FYYTdGB7bF"
		end)
	end
end)

------------------------------------------------
-- FPS + PING
------------------------------------------------
local frames,last,fps = 0,os.clock(),0

RunService.RenderStepped:Connect(function()
	frames += 1
	if os.clock() - last >= 1 then
		fps = frames
		frames = 0
		last = os.clock()

		local ping = math.floor(
			Stats.Network.ServerStatsItem["Data Ping"]:GetValue()
		)

		statsLabel.Text = "FPS: "..fps.." | Ping: "..ping.." ms"
	end
end)

